<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/btnLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <Button
                android:id="@+id/btnAC"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_weight="2"
                android:layout_marginEnd="5dp"
                android:text="AC"
                android:textSize="25dp"
                android:backgroundTint="@color/red"/>
            <Button
                android:id="@+id/btnC"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_weight="3"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:text="C"
                android:textSize="25dp"
                android:backgroundTint="@color/red"/>

            <Button
                android:id="@+id/btnDvd"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_weight="3"
                android:layout_marginStart="5dp"
                android:text="รท"
                android:textSize="25dp"
                android:backgroundTint="@color/darkBrown"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <Button
                android:id="@+id/btn7"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_weight="1"
                android:layout_marginEnd="5dp"
                android:text="7"
                android:textSize="25dp"
                android:backgroundTint="@color/brown"/>
            <Button
                android:id="@+id/btn8"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_weight="1"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:text="8"
                android:textSize="25dp"
                android:backgroundTint="@color/brown"/>
            <Button
                android:id="@+id/btn9"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_weight="1"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:text="9"
                android:textSize="25dp"
                android:backgroundTint="@color/brown"/>
            <Button
                android:id="@+id/btnTms"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_weight="1"
                android:layout_marginStart="5dp"
                android:text="ร"
                android:textSize="25dp"
                android:backgroundTint="@color/darkBrown"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <Button
                android:id="@+id/btn4"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_weight="1"
                android:layout_marginEnd="5dp"
                android:text="4"
                android:textSize="25dp"
                android:backgroundTint="@color/brown"/>
            <Button
                android:id="@+id/btn5"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_weight="1"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:text="5"
                android:textSize="25dp"
                android:backgroundTint="@color/brown"/>
            <Button
                android:id="@+id/btn6"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_weight="1"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:text="6"
                android:textSize="25dp"
                android:backgroundTint="@color/brown"/>
            <Button
                android:id="@+id/btnMns"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_weight="1"
                android:layout_marginStart="5dp"
                android:text="-"
                android:textSize="40dp"
                android:backgroundTint="@color/darkBrown"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <Button
                android:id="@+id/btn1"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_weight="1"
                android:layout_marginEnd="5dp"
                android:text="1"
                android:textSize="25dp"
                android:backgroundTint="@color/brown"/>
            <Button
                android:id="@+id/btn2"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_weight="1"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:text="2"
                android:textSize="25dp"
                android:backgroundTint="@color/brown"/>
            <Button
                android:id="@+id/btn3"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_weight="1"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:text="3"
                android:textSize="25dp"
                android:backgroundTint="@color/brown"/>
            <Button
                android:id="@+id/btnPls"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_weight="1"
                android:layout_marginStart="5dp"
                android:text="+"
                android:textSize="30dp"
                android:backgroundTint="@color/darkBrown"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <Button
                android:id="@+id/btn0"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_weight="2"
                android:layout_marginEnd="5dp"
                android:text="0"
                android:textSize="25dp"
                android:backgroundTint="@color/brown"/>
            <Button
                android:id="@+id/btnEqls"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_weight="2"
                android:layout_marginStart="5dp"
                android:text="="
                android:textSize="30dp"
                android:backgroundTint="@color/darkBrown"/>


        </LinearLayout>


    </LinearLayout>
</RelativeLayout>